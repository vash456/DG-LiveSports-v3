<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@drawable/fondo"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_usuario"
        android:hint="Usuario"
        android:textColorHint="@color/orange"
        android:textColor="@color/orange"
        android:inputType="textPersonName"
        android:background="@color/temaGrisApp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:hint="ContraseÃ±a"
        android:textColorHint="@color/orange"
        android:textColor="@color/orange"
        android:inputType="textPassword"
        android:background="@color/temaGrisApp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />
    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/b_entrar"
        android:text="Entrar"
        android:textColor="@color/white"
        android:background="@color/temaGrisApp"
        android:layout_gravity="center"/>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_facebook"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="5dp" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_google_plus"/>
    </LinearLayout>
-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />
        <Button
            android:id="@+id/sign_in_button"
            android:background="@drawable/google_sgn_button"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:paddingTop="3dp"
            android:id="@+id/t_Registro"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Registrarse"
            android:textColor="@color/blue"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:clickable="true"/>

    </LinearLayout>
</ScrollView>
